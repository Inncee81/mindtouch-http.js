{
  "name": "mindtouch-http.js",
  "main": "dist/index.js",
  "version": "2.1.5",
  "description": "A JavaScript library to construct URLs and make HTTP requests using the fetch API",
  "format": "esm",
  "registry": "npm",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MindTouch/mindtouch-http.js.git"
  },
  "scripts": {
    "test-node": "jest --config jest-node.json",
    "watch-node": "jest --config jest-node.json --watch",
    "test-jsdom": "jest --config jest-jsdom.json",
    "watch-jsdom": "jest --config jest-jsdom.json --watch",
    "test": "npm run test-jsdom & npm run test-node;wait",
    "inspect": "eslint ./*.js ./lib/**/*.js ./__tests__/*.js",
    "docs": "jsdoc -c .jsdoc.json",
    "bundle": "rollup --config .rollup.config.js"
  },
  "author": "MindTouch",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/MindTouch/mindtouch-http.js/issues"
  },
  "homepage": "https://github.com/MindTouch/mindtouch-http.js",
  "devDependencies": {
    "babel-jest": "19.0.0",
    "babel-preset-es2015": "6.24.0",
    "eslint": "6.0.1",
    "eslint-config-mindtouch": "1.0.0",
    "jest-cli": "19.0.2",
    "jsdoc": "^3.4.3",
    "rollup": "^0.41.6"
  },
  "directories": {
    "doc": "docs"
  }
}
